<div class="home-banner", style = "background-image: url(https://source.unsplash.com/random)">
  <h1><%= @cocktail.name %></h1>
</div>

<h2>Details</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li style = "list-style:none;"> <%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "Remove", dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<%= link_to "Back to list", cocktails_path %>
<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail.id) %>
